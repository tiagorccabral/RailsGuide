<head>
   <link rel="stylesheet" href="/app/assets/css/main.css">
</head>

<div class = "container">
   <h1 style = "font-weight:bold">Blog de Artigos</h1><br>
   <%= link_to 'Novo Artigo', new_article_path, class: "btn btn-success" %><br><br><br>
   <table class="table table-bordered" style = "color: black">
     <tr>
       <th>Title</th>
       <th>Text</th>
       <th colspan="3"></th>
     </tr>

     <% @articles.each do |article| %>
       <tr>
         <td><%= article.title %></td>
         <td><%= article.text %></td>
         <td><%= link_to 'Mostrar', article_path(article) , class: "btn btn-info" %></td>
         <td><%= link_to 'Editar', edit_article_path(article), class: "btn btn-primary" %></td>
         <td><%= link_to 'Excluir', article_path(article),
                 method: :delete,
                 data: { confirm: 'Tem certeza?' }, class: "btn btn-danger" %></td>
       </tr>
     <% end %>
   </table>
   <br><br>
   <p><%= link_to 'Voltar', root_path, class: "btn btn-default" %></p>

</div>
